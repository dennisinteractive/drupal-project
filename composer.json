{
    "name": "dennisdigital/drupal-project",
    "description": "Project template for Drupal 8 projects with Composer, Phing and Behat",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "package",
            "package": {
                "name": "pfrenssen/phpcs-pre-push",
                "version": "1.0",
                "type": "git-hook",
                "source": {
                    "url": "https://gist.github.com/498fc52fea3f965f6640.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "_comment": "The PhingDrushTask module does not currently have a D8 release and is not available on https://packages.drupal.org/8. See https://www.drupal.org/node/2817131.",
            "type": "vcs",
            "url": "git@github.com:pfrenssen/phingdrushtask.git"
        },
        {
            "_comment": "Use a separate repo to store scripts that can be deployed to all sites.",
            "type": "package",
            "package": {
                "name": "dennisdigital/drupal-project-scripts",
                "version": "dev-master",
                "type": "drupal-script",
                "source": {
                    "url": "git@github.com:dennisinteractive/drupal-project-scripts.git",
                    "type": "git",
                    "reference": "master"
                },
                "require": {
                    "oomphinc/composer-installers-extender": "~1.0"
                }
            }
        },
        {
            "_comment": "Common stuff that will be used on all sites sites.",
            "type": "package",
            "package": {
                "name": "dennisdigital/drupal-project-tests",
                "version": "dev-master",
                "type": "behat-tests",
                "source": {
                    "url": "git@github.com:dennisinteractive/drupal-project-tests.git",
                    "type": "git",
                    "reference": "master"
                },
                "require": {
                    "oomphinc/composer-installers-extender": "~1.0"
                }
            }
        }
    ],
    "require": {
        "composer/composer": "~1.0",
        "composer/installers": "^1.0.20",
        "drupal-composer/drupal-scaffold": "^2.0.1",
        "cweagans/composer-patches": "~1.0",
        "drupal/console": "~1.0",
        "drupal/core": "~8.0",
        "drush/drush": "~8.0",
        "php": ">=5.5.9",
        "symfony/css-selector": "~2.8"
    },
    "require-dev": {
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "behat/mink-selenium2-driver": "dev-master#721cbbaf37f71434f6acb604dc3a17a6a9be0c4c",
        "drupal/coder": "~8.2.7",
        "drupal/config_update": "1.*@dev",
        "drupal/devel": "1.*@dev",
        "drupal/drupal-extension": "~3.0",
        "drupal/phingdrushtask": "dev-7.x-2.x",
        "jcalderonzumba/gastonjs": "^1.1@dev",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsStream": "~1.2",
        "pfrenssen/phpcs-pre-push": "1.0",
        "phing/phing": "~2.10",
        "phpunit/phpunit": "~4.8",
        "dennisdigital/drupal-project-scripts": "dev-master",
        "dennisdigital/drupal-project-tests": "dev-master"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Drupal\\DrupalProject\\": "tests/src",
            "DrupalProject\\": "src"
        },
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-types": ["drupal-script", "behat-tests"],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"],
            "scripts/composer": ["type:drupal-script"],
            "tests/features": ["type:behat-tests"]
        }
    }
}
